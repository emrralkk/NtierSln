@model RoleViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>CreateRole</h1>
<hr />
<form method="post">
    <div class="col-md-2">
        @Html.LabelFor(x => x.Name)
    </div>
    <div class="col-md-9">
        @Html.EditorFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

